[MASTER]
init-hook='import sys; sys.path.append("src/")'

ignore=tests,migrations

disable=missing-docstring,
        too-few-public-methods,
        unused-argument,
        no-member,
        no-self-use,
        invalid-name,
        duplicate-code,
        too-many-locals,
        too-many-branches,
        too-many-statements,
        fixme

max-line-length=120